[alias]
	git = !git
	st = status
	lg = git log --oneline --all --graph
	c = git commit
	co = git checkout
	a = git add
	d = git diff
	pushfwl = push --force-with-lease
	pull = pull --rebase
[rebase]
	autoSquash = true
[merge]
    tool = meld
[mergetool "meld"]
    # Choose one of these two lines (not both!) explained below.
    cmd = meld "$LOCAL" "$MERGED" "$REMOTE" --output "$MERGED"
[push]
	default = current
